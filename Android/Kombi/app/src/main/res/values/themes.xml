<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kombi" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorAccent">@color/accent</item>

        <item name="backgroundColor">@color/white</item>

        <item name="textColor">@color/black</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        // Important to draw behind cutouts
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>


        //transitions
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

    </style>


    <style name="Theme.Kombi" parent="Base.Theme.Kombi" />


    <!--
Text styles : four main text styles : h1, h2, h3, P
-->


    <style name="h1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/b</item>
    </style>

    <style name="h2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/b</item>
    </style>

    <style name="h3" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/b</item>
    </style>

    <style name="h4" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/m</item>
    </style>

    <style name="p" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/r</item>
    </style>

    <style name="small" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/l</item>
    </style>


    <!--
    Button styles : primary, secondary and disabled
    -->

    <style name="ButtonLight40" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/background_light40</item>
        <item name="android:layout_margin">8dp</item>
        <item name="fontFamily">@font/r</item>
    </style>

    <style name="ButtonAccent" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/background_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/r</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/background_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/r</item>
    </style>

    <style name="ButtonBlack40" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/background_dark40</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/r</item>
    </style>


</resources>