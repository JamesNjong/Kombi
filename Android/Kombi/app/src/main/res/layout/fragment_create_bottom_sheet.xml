<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create.CreateFragment"
    android:padding="@dimen/_34dp"
    android:background="@color/white"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_dark40"
        android:layout_margin="@dimen/fab_margin"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/h2"
            android:text="Creat Task"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_34dp"
            android:gravity="center"
            />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/p"
        android:text="Task Name"
        android:layout_marginTop="@dimen/_34dp"
        android:paddingBottom="@dimen/fab_margin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:hint="What's the task ?"
        android:background="@drawable/background_light40"
        android:id="@+id/input_task_name"
        android:maxLines="1"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/p"
        android:text="Task Description (Optional)"
        android:layout_marginTop="@dimen/_34dp"
        android:paddingBottom="@dimen/fab_margin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:hint="What's the task ?"
        android:background="@drawable/background_light40"
        android:id="@+id/input_task_description"
        android:minHeight="120dp"
        android:singleLine="false"
        android:gravity="top"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/p"
        android:text="Task Type"
        android:layout_marginTop="@dimen/_34dp"
        android:paddingBottom="@dimen/fab_margin"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/create_tag_radio"
            >

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:layout_weight="1"
                android:id="@+id/tag_upcoming"
                android:checked="true"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Important"
                android:layout_weight="1"
                android:id="@+id/tag_important"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:maxLines="1"
                android:layout_weight="1"
                android:id="@+id/tag_urgent"/>


        </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/p"
        android:text="Choose date and time"
        android:layout_marginTop="@dimen/_34dp"
        android:paddingBottom="@dimen/fab_margin"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/task_date_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light_40"
            app:cardCornerRadius="@dimen/_8dp"
            app:contentPadding="@dimen/fab_margin"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a date"
                android:drawableStart="@drawable/luna_calendar"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height=".2dp"
            android:background="@color/black"
            android:layout_weight="1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/task_time_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light_40"
            app:cardCornerRadius="@dimen/_8dp"
            app:contentPadding="@dimen/fab_margin"
            android:elevation="0dp"
            app:cardElevation="0dp"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select time"
                android:maxLines="1"
                android:drawableStart="@drawable/luna_clock"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </androidx.cardview.widget.CardView>



    </androidx.appcompat.widget.LinearLayoutCompat>


    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Task"
        android:layout_marginTop="@dimen/_34dp"
        style="@style/p" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_34dp"
        android:id="@+id/create_repeat_radio"
        android:visibility="gone"
        >

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:layout_weight="1"
            android:id="@+id/repeat_daily"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly"
            android:layout_weight="1"
            android:id="@+id/repeat_weekly"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly"
            android:maxLines="1"
            android:layout_weight="1"
            android:id="@+id/repeat_monthly"/>


    </RadioGroup>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonAccent"
            android:text="Done"
            android:layout_marginTop="@dimen/_34dp"
            android:layout_marginBottom="@dimen/_34dp"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>